<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:text="baltimoreravens"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/team_score_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="56dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="touchDownTeamA"
                        android:text="touch down" />

                    <TextView
                        android:id="@+id/touchDownTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="extraPointTeamA"
                        android:text="extrapoint" />

                    <TextView
                        android:id="@+id/extraPointTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="pointConversionTeamA"
                        android:text="point conversion" />

                    <TextView
                        android:id="@+id/twoPointTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="fieldGoalTeamA"
                        android:text="field goal" />

                    <TextView
                        android:id="@+id/fieldGoalTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="safetyTeamA"
                        android:text="safety" />

                    <TextView
                        android:id="@+id/safetyTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:text="bengals"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/team_score_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="56dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="touchDownTeamB"
                        android:text="touch down" />

                    <TextView
                        android:id="@+id/touchDownTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="extraPointTeamB"
                        android:text="extrapoint" />

                    <TextView
                        android:id="@+id/extraPointTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="pointConversionTeamB"
                        android:text="point conversion" />

                    <TextView
                        android:id="@+id/twoPointTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="fieldGoalTeamB"
                        android:text="field goal" />

                    <TextView
                        android:id="@+id/fieldGoalTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="safetyTeamB"
                        android:text="safety" />

                    <TextView
                        android:id="@+id/safetyTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="reset"
            android:text="reset" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
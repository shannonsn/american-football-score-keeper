<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/football"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ravens"/>

                    <TextView
                        android:id="@+id/team_score_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="56dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:textColor="#ECEFF1"
                        android:onClick="touchDownTeamA"
                        android:text="touch down" />

                    <TextView
                        android:id="@+id/touchDownTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:text="0" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="extraPointTeamA"
                        android:textColor="#ECEFF1"
                        android:text="extrapoint" />

                    <TextView
                        android:id="@+id/extraPointTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="pointConversionTeamA"
                        android:textColor="#ECEFF1"
                        android:text="point conversion" />

                    <TextView
                        android:id="@+id/twoPointTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:textColor="#ECEFF1"
                        android:onClick="fieldGoalTeamA"
                        android:text="field goal" />

                    <TextView
                        android:id="@+id/fieldGoalTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:onClick="safetyTeamA"
                        android:textColor="#ECEFF1"
                        android:text="safety" />

                    <TextView
                        android:id="@+id/safetyTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:src="@drawable/large"/>

                    <TextView
                        android:id="@+id/team_score_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="56dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:textColor="#ECEFF1"
                        android:onClick="touchDownTeamB"
                        android:text="touch down" />

                    <TextView
                        android:id="@+id/touchDownTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:textColor="#ECEFF1"
                        android:onClick="extraPointTeamB"
                        android:text="extrapoint" />

                    <TextView
                        android:id="@+id/extraPointTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:textColor="#ECEFF1"
                        android:onClick="pointConversionTeamB"
                        android:text="point conversion" />

                    <TextView
                        android:id="@+id/twoPointTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:textColor="#ECEFF1"
                        android:onClick="fieldGoalTeamB"
                        android:text="field goal" />

                    <TextView
                        android:id="@+id/fieldGoalTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:textColor="#ECEFF1"
                        android:onClick="safetyTeamB"
                        android:text="safety" />

                    <TextView
                        android:id="@+id/safetyTeamB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ECEFF1"
            android:onClick="reset"
            android:layout_marginBottom="6dp"
            android:text="reset" />

    </RelativeLayout>
</RelativeLayout>